<Page x:Class="DicomExample.Views.DicomStoragePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:DicomExample.Views"
      xmlns:vm="clr-namespace:DicomExample.ViewModels"
      mc:Ignorable="d">
    <Page.DataContext>
        <vm:DicomStorageViewModel/>
    </Page.DataContext>
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Calling AE Title:" />
            <TextBox Text="{Binding CallingAeTitle}" Margin="0,0,0,10" />

            <TextBlock Text="Called AE Title:" />
            <TextBox Text="{Binding CalledAeTitle}" Margin="0,0,0,10" />

            <TextBlock Text="Remote Host:" />
            <TextBox Text="{Binding RemoteHost}" Margin="0,0,0,10" />

            <TextBlock Text="Remote Port:" />
            <TextBox Text="{Binding RemotePort}" Margin="0,0,0,10" />

            <Button Content="Select DICOM File" Margin="0,0,0,10" Command="{Binding SelectFileCommand}" />
            <TextBlock Text="{Binding SelectedFilePath}" Margin="0,0,0,10" />

            <Button Content="Send C-STORE" Command="{Binding SendCommand}" />
        </StackPanel>
    </Grid>
</Page>
